<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/titles"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                    android:id="@+id/zone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="45dp" />
            
            <TextView
                    android:id="@+id/ranking_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ranking"
                    android:textColor="#ffffff"
                    android:textSize="35dp" />
            
            <TextView
                    android:id="@+id/primero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Franco Escobar: 35 puntos"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            
            <TextView
                    android:id="@+id/segundo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paulo Muchutti: 30 puntos"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            
            <TextView
                    android:id="@+id/tercero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ladero ladero: 30 puntos"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            
            <TextView
                    android:id="@+id/descripcion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripcion:"
                    android:textColor="#ffffff"
                    android:textSize="35dp" />

             <TextView
                    android:id="@+id/descripcion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>